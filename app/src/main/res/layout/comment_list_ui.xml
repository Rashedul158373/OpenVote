<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="24dp"
                android:background="@drawable/acc_icon"
                android:backgroundTint="#817676" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentWriterCAUITV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shafayat created a poll"
                    android:textColor="@color/toolBarColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/commentCAUITV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="comment"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/text_color"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_margin="3dp"
                android:background="#808080" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/commentForCAUITV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:text="For Yes"
                    android:textAlignment="textEnd"
                    android:textColor="@color/text_color" />

                <TextView
                    android:id="@+id/createTimeCAUITV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:text="20 min"
                    android:textAlignment="textEnd"
                    android:textColor="@color/text_color"
                    android:textSize="12sp" />


            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>