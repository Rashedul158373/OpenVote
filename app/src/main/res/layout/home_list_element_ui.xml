<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="#EFEDF2"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/acc_icon"
                    android:backgroundTint="#817676"
                    android:padding="30dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userNameTVHAUI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:text="Shafayat created a poll"
                        android:textColor="@color/toolBarColor"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lifetimeTVHAUI"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:text="01 hr"
                        android:textColor="#7C7878"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/titleTVHAUI"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_weight=".5"
                    android:paddingTop="14dp"
                    android:paddingRight="10dp"
                    android:text="#1105"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <TextView
                android:id="@+id/topicTVHAUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:text="Voting Topic"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/voteCountTVHAUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:paddingLeft="10dp"
                android:text="30 people agreed and 10 allien disagreed!"
                android:textColor="#7C7878"
                android:textSize="12sp" />


            <RadioGroup
                android:id="@+id/radioGRPHAUI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/agreeRBHAUI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agree"
                    android:textColor="@color/toolBarColor"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/disagreeRBHAUI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disagree"
                    android:textColor="#EB4D55"
                    android:textStyle="bold" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/commentETHAUI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/curve_background"
                    android:gravity="top"
                    android:hint="Add Comment"
                    android:inputType="textMultiLine"
                    android:padding="10dp"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/submitVoteBTNHAUI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    android:text="Submit"
                    android:background="@drawable/button_background"
                    android:theme="@style/submit_button_style"
                    android:textAllCaps="false"
                    android:textSize="10sp" />
            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>