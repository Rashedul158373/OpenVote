<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="7dp"
    app:cardCornerRadius="14dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFDFC">
        <Button
            android:id="@+id/option_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/option_icon"
            android:gravity="center"
            android:layout_gravity="end"
            android:padding="1dp"
            android:layout_margin="1dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E7E7E7">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFDFC"
                android:gravity="center_vertical"
                android:text="some questions?"
                android:textColor="#041A97"
                android:textSize="25dp"
                android:padding="1dp"
                android:layout_margin="1dp"
                />

            <RadioGroup
                android:id="@+id/decision_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agree"
                    android:background="#FFFDFC"
                    android:textSize="22sp"
                    android:padding="1dp"
                    android:layout_margin="1dp"/>
                <RadioButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFDFC"
                    android:padding="1dp"
                    android:text="Disagree"
                    android:textSize="22sp" />

            </RadioGroup>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:visibility="visible"
                        android:id="@+id/agreeComment_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="why are you agree?"
                        android:textSize="20dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:padding="1dp"
                        android:layout_margin="1dp"/>
                    <EditText
                        android:visibility="visible"
                        android:id="@+id/disagreeComment_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="why are you disagree?"
                        android:textSize="20dp"
                        android:background="#FFFFFF"
                        android:gravity="center_vertical"
                        android:padding="1dp"
                        android:layout_margin="1dp"/>

                </LinearLayout>


            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/heart_iv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:theme="@style/submit_button_style"
                android:background="@drawable/heart"
                android:scaleType="fitCenter"/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/heartFull_iv"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:theme="@style/submit_button_style"
                android:background="@drawable/heart_full"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/likecount_tv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="(60)"
                android:textColor="#0F0F0F"
                android:textStyle="bold"
                android:textSize="22sp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:padding="1dp"
                android:paddingStart="5dp"
                android:layout_margin="1dp"
                />
            <Button
                android:id="@+id/submit_btn"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:text="Submit"
                android:textSize="22sp"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:theme="@style/submit_button_style"
                android:background="@drawable/submit_button"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>