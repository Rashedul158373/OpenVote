<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="7dp"
    app:cardCornerRadius="14dp"
    android:layout_margin="3dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        android:background="#FFFDFC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/profile_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/heart_full"
            android:textSize="20dp"
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:scaleType="fitCenter"
            android:padding="1dp"
            android:layout_margin="1dp"/>

        <TextView
            android:id="@+id/userName_TV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="6"
            android:hint="User Name"
            android:gravity="center_vertical"
            android:padding="1dp"
            android:textColor="#041A97"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/submit_date_TV"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:gravity="end"
            android:layout_gravity="end"
            android:layout_margin="1dp"
            android:hint="20/01/11"
            android:textSize="17sp"
            android:padding="1dp"
            android:textColor="#041A97"
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">
            <SeekBar
                android:id="@+id/seekbar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@drawable/heart_full"
                android:textSize="20dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:padding="1dp"
                android:layout_margin="1dp"/>

            <TextView
                android:id="@+id/seekbar_time"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_margin="1dp"
                android:hint="20 minute"
                android:textSize="17sp"
                android:padding="1dp"
                android:textColor="#041A97"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:background="#E7E7E7">

            <TextView
                android:visibility="visible"
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:background="#FFFDFC"
                android:gravity="center_vertical"
                android:text="some questions?"
                android:textColor="#041A97"
                android:textSize="19dp"
                android:padding="1dp"
                android:layout_margin="1dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/agree_Check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_check_agree"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:gravity="left"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:padding="1dp"
                    android:layout_margin="1dp"/>
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/disagree_Check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_check_disagree"
                    android:textSize="20dp"
                    android:background="#FFFFFF"
                    android:gravity="left"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:padding="1dp"
                    android:layout_margin="1dp"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/agreeMessage_TV"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="You agree this vote"
                    android:padding="1dp"
                    android:textColor="#00000A"
                    android:textSize="18dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/disagreeMessage_TV"
                    android:layout_width="0dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:text="You disagree this vote"
                    android:padding="1dp"
                    android:textColor="#00000A"
                    android:textSize="18dp" />
            </LinearLayout>
            <RadioGroup
                android:id="@+id/decision_rg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Agree"
                    android:layout_gravity="center_vertical"
                    android:background="#FFFDFC"
                    android:textSize="18dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="#FFFDFC"
                    android:layout_gravity="center_vertical"
                    android:padding="1dp"
                    android:text="Disagree"
                    android:textSize="18dp" />

            </RadioGroup>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center">
                <EditText
                    android:visibility="visible"
                    android:id="@+id/agreeComment_et"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="Comment"
                    android:layout_gravity="center_vertical"
                    android:textSize="18dp"
                    android:background="#FFFFFF"
                    android:gravity="center_vertical"
                    android:padding="1dp"
                    android:layout_margin="1dp"/>
                <Button
                    android:visibility="visible"
                    android:id="@+id/submit_btn"
                    android:layout_width="0dp"
                    android:layout_height="50sp"
                    android:layout_weight="1"
                    android:text="Submit"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:theme="@style/submit_button_style"
                    android:background="@drawable/submit_button"/>

            </LinearLayout>


        </ScrollView>
    </LinearLayout>

</androidx.cardview.widget.CardView>